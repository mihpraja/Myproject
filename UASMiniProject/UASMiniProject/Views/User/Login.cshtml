@model UASMiniProject.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link href="~/css/Register.css" rel="stylesheet" />
<!------ Include the above in your HEAD tag ---------->
@{
    if (TempData["message"] != null)
    {
        <script type="text/javascript">
            alert(@Html.Raw(Json.Encode(TempData["message"])))
        </script>
    }
}
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{

    <div class="container register">
        <div class="row">
           
            <div class="col-md-3 register-left">
                <img src="~/img/LoginPage.jfif" height="400" width="1150" alt="" />
                <h3>Welcome</h3>
                <p>Pleasure in the job puts perfection in the work!</p>
            </div>
            <div class="col-md-9 register-right">

                <div>
                    <h3 class="register-heading">LOGIN</h3>
                    <div class="row register-form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Login_id, new { htmlAttributes = new { @class = "form-control", @placeholder = "Login Id*" } })
                                    @Html.ValidationMessageFor(model => model.Login_id, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br /><br />
                            <div class="form-group">
                                <div class="col-md-10">

                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password*" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br /><br />
                            <div class="form-group">
                                <div class="btn-group" data-toggle="buttons">
                                    <label class="btn btn-info active">
                                        @Html.RadioButtonFor(m => m.Role, "Admin", true)@Html.Label("Admin")
                                    </label>
                                    <label class="btn btn-success active">
                                        @Html.RadioButtonFor(m => m.Role, "MAC", false)@Html.Label("MAC")
                                    </label>
                                    @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br /><br />
                            <div class="form-group text-center">
                                <input type="submit" class="btn btn-warning" value="Login" onclick="window.location.href('@Url.Action("Index","MAC")')" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

