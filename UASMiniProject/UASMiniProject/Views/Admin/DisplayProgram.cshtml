@model IEnumerable<UASMiniProject.Models.ProgramsOffered>

@{
                /**/

                ViewBag.Title = "DisplayProgram";
                Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<br /><br /><br />
@using (Html.BeginForm())
{
    <div class="col-lg-1">
        @Html.ActionLink("Create Program", "Create", "Admin", new { @class = "btn btn-info" })
    </div>
    <div class="col-lg-offset-11">

        @Html.ActionLink("Admin Menu ", "Index", "Admin", new { @class = "btn btn-danger  " })
    </div>
    <table class="table table-hover">
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Program_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicant_Eligibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration_in_years)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Degree_Certificate_Offered)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Program_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Applicant_Eligibility)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration_in_years)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree_Certificate_Offered)
                </td>
                <td>
                    @Html.ActionLink("UPDATE", "Edit", new { id = item.DummyID_PO }, new { @class = "btn btn-success" })
                    @*@Html.ActionLink("Details", "Details", new { id = item.DummyID_PO }) |*@
                    @Html.ActionLink("DELETE", "Delete", new { id = item.DummyID_PO }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }

    </table>
}
