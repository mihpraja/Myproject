@model IEnumerable<UASMiniProject.Models.ApplicationForm>

@{
    ViewBag.Title = "StatusFinal";
    Layout = "~/Views/Shared/_LayoutApplicant.cshtml";
}
<br /><br /><br />
<h3 class="text-center text-danger">Know your Status</h3>
<br />
@using (Html.BeginForm())
{
    <b>Enter Your Email Id:</b>
    @Html.TextBox("search") <input type="submit"
                                   name="submit"
                                   value="Search" />
}
<br />
<table class="table table-hover">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Full_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_Of_Interview)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="success">
            <td>
                @Html.DisplayFor(modelItem => item.Full_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email_Id)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Of_Interview)
            </td>
        </tr>
    }

</table>
